---
import { IProjects } from "@types";
import ProjectCard from "./ProjectCard.astro";
import { techIcons } from "@data";

const { projects } = Astro.props as IProjects;

---

<div class="flex flex-col gap-4 my-16">
  {
    projects.map((project) => (
      <article class="flex flex-col xl:flex-row gap-4">
        <ProjectCard className="xl:w-[30%] w-full" projectDetail={project} />
        <div class="flex flex-col xl:w-[70%] w-full justify-between">
          <h3 class="mb-2">{project.title}</h3>
          <p class="dark:text-gray mb-4">
           {project.description}
          </p>
          <div class="flex flex-row flex-wrap xl:flex-nowrap gap-1">
            {project.techStack.map((tech) => (
              <span class={`inline-flex items-center gap-x-1.5 rounded-md px-2 py-1 text-s font-medium text-white ring-1 ring-inset ring-${techIcons[tech].color}`}>
                {tech}
              </span>
            ))}         
          </div>
        </div>
      </article>
    ))
  }
</div>

<style>
.ring-gray-400\/20 { 
  --tw-ring-color: rgb(156 163 175 / 0.2);
}
</style>